back.addEventListener("click", function(){
	update.show();
	events.show();
	shuttle.show();
	rocket.show();
	venture.show();
	sate.show();

	menu.remove(listView);
	menu.remove(rocketView);
	menu.remove(ventureView);
	menu.remove(sateView);
	menu.remove(back);
});

// Event Listeners
button.addEventListener("click", function(){
	menu.add(shuttle);
	menu.add(rocket);
	menu.add(venture);
	menu.add(sate);
	menu.add(update);
	menu.add(events);
	menu.add(logoTwo);
	menu.open();
	
	win.close();
});
shuttle.addEventListener("click", function(){
	menu.add(back);
	menu.add(listView);
	update.hide();
	events.hide();
	shuttle.hide();
	rocket.hide();
	venture.hide();
	sate.hide();
	
});
rocket.addEventListener("click", function(){
	menu.add(back),
	menu.add(rocketView);
	update.hide();
	events.hide();
	shuttle.hide();
	rocket.hide();
	venture.hide();
	sate.hide();
	
});
venture.addEventListener("click", function(){
	menu.add(back);
	menu.add(ventureView);
	update.hide();
	events.hide();
	shuttle.hide();
	rocket.hide();
	venture.hide();
	sate.hide();
});
sate.addEventListener("click", function(){
	menu.add(back);
	menu.add(sateView);
