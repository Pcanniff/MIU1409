back.addEventListener("click", function(){
	update.show();
	events.show();
	menu.remove(listView);
	menu.remove(rocketView);
	menu.remove(ventureView);
	menu.remove(back);
});
search.addEventListener("cancel", function(){
	this.blur();
});

// Event Listeners
button.addEventListener("click", function(){
	menu.add(shuttle);
	menu.add(rocket);
	menu.add(venture);
	menu.add(sate);
	menu.add(update);
	menu.add(events);
	menu.add(logoTwo);
	menu.open();
	win.close();
});
shuttle.addEventListener("click", function(){
	menu.add(back);
	menu.add(listView);
	update.hide();
	events.hide();
	
});
rocket.addEventListener("click", function(){
	menu.add(back);
	menu.add(rocketView);
	update.hide();
	events.hide();
	
});
venture.addEventListener("click", function(){
	menu.add(back);
	menu.add(ventureView);
	update.hide();
	events.hide();
	
});
search.addEventListener("return", function(){
	menu.add(back);
	menu.add(listView);
	search.blur();
	search.hide();
});


sectionOne.setItems(shuttleData);
sections.push(sectionOne);
listView.setSections(sections);

sectionTwo.setItems(rocketData);
rocketSec.push(sectionTwo);
rocketView.setSections(rocketSec);

sectionThree.setItems(ventureData);
ventureSec.push(sectionThree);
ventureView.setSections(ventureSec);
